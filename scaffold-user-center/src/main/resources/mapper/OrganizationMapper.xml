<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kite.usercenter.mapper.OrganizationMapper">

    <resultMap id="BaseResultMap" type="com.kite.usercenter.entity.Organization">
        <id column="id" property="id"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="parent_id" property="parentId"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="sort" property="sort"/>
        <result column="path" property="path"/>
        <result column="leader_id" property="leaderId"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="BaseColumns">
        id, tenant_id, parent_id, name, type, sort, path, leader_id, status, remark, create_time, update_time
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_org (tenant_id, parent_id, name, type, sort, path, leader_id, status, remark)
        VALUES (#{tenantId}, #{parentId}, #{name}, #{type}, #{sort}, #{path}, #{leaderId}, #{status}, #{remark})
    </insert>

    <update id="update">
        UPDATE sys_org
        <set>
            <if test="tenantId != null">tenant_id = #{tenantId},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="type != null">type = #{type},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="path != null">path = #{path},</if>
            <if test="leaderId != null">leader_id = #{leaderId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM sys_org WHERE id = #{id}
    </delete>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="BaseColumns"/> FROM sys_org WHERE id = #{id}
    </select>

    <select id="selectByTenant" resultMap="BaseResultMap">
        SELECT <include refid="BaseColumns"/> FROM sys_org
        WHERE tenant_id = #{tenantId}
        ORDER BY sort ASC, id ASC
    </select>

    <select id="selectChildren" resultMap="BaseResultMap">
        SELECT <include refid="BaseColumns"/> FROM sys_org
        WHERE tenant_id = #{tenantId} AND parent_id = #{parentId}
        ORDER BY sort ASC, id ASC
    </select>
</mapper>
