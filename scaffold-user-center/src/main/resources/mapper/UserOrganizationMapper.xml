<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kite.usercenter.mapper.UserOrganizationMapper">

    <resultMap id="BaseResultMap" type="com.kite.usercenter.entity.UserOrganization">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="org_id" property="orgId"/>
        <result column="primary_flag" property="primaryFlag"/>
        <result column="position_name" property="positionName"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_user_org (user_id, org_id, primary_flag, position_name)
        VALUES (#{userId}, #{orgId}, #{primaryFlag}, #{positionName})
    </insert>

    <insert id="insertBatch">
        INSERT INTO sys_user_org (user_id, org_id, primary_flag, position_name)
        VALUES
        <foreach collection="relations" item="item" separator=",">
            (#{item.userId}, #{item.orgId}, #{item.primaryFlag}, #{item.positionName})
        </foreach>
    </insert>

    <delete id="deleteByUserId">
        DELETE FROM sys_user_org WHERE user_id = #{userId}
    </delete>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT id, user_id, org_id, primary_flag, position_name, create_time
        FROM sys_user_org
        WHERE user_id = #{userId}
    </select>
</mapper>
